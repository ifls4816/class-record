{
  "name": "electron-desktop",
  "description": "a electron project",
  "author": "ifls",
  "private": true,
  "version": "1.0.0",
  "license": "",
  "main": "dist/electron/index.js",
  "scripts": {
    "dev": "vite",
    "build": "rimraf dist && vue-tsc --noEmit && vite build && electron-builder"
  },
  "debug": {
    "env": {
      "VITE_DEV_SERVER_HOSTNAME": "127.0.0.1",
      "VITE_DEV_SERVER_PORT": 3344,
      "VITE_DEV_SERVER_URL": "http://127.0.0.1:3344"
    }
  },
  "dependencies": {
    "ant-design-vue": "^3.2.15",
    "echarts": "^5.4.2",
    "electron-store": "^8.1.0",
    "vue": "^3.2.47",
    "vue-router": "4.1.6"
  },
  "devDependencies": {
    "@types/node": "^18.15.1",
    "@vitejs/plugin-vue": "^4.0.0",
    "electron": "^23.1.3",
    "electron-builder": "^23.3.3",
    "electron-devtools-installer": "^3.2.0",
    "less": "^4.1.2",
    "rimraf": "^4.4.0",
    "typescript": "^4.9.5",
    "vite": "^4.1.4",
    "vite-plugin-electron": "^0.11.1",
    "vue-tsc": "^1.2.0"
  },
  "build": {
    "appId": "com.iflsElectron.desktop",
    "productName": "课时记录",
    "asar": true,
    "copyright": "Copyright © 2023 IFLS",
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "dist"
    ],
    "mac": {
      "icon": "build/icon/icon.icns",
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "build/icon/icon.ico",
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  }
}
